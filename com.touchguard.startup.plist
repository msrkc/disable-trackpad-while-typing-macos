<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.touchguard.startup</string>
    
    <!-- Path to the script -->
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/touchguard-login.sh</string>
    </array>
    
    <!-- Start at login -->
    <key>RunAtLoad</key>
    <true/>
    
    <!-- Restart if the script exits -->
    <key>KeepAlive</key>
    <true/>
    
    <!-- Log output for debugging -->
    <key>StandardOutPath</key>
    <string>/tmp/touchguard_stdout.log</string>
    <key>StandardErrorPath</key>
    <string>/tmp/touchguard_stderr.log</string>
</dict>
</plist>
